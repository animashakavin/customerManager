			</releases>
			<id>public-snapshots</id>
			<name>Aircell Maven 2 Repository (Snapshots)</name>
			<url>http://nexus.gogoair.com/nexus/content/groups/public-snapshots</url>
			<layout>default</layout>
		</repository>
	</repositories>

	<!-- Gogo Maven Plugin Repository Reference -->
	<pluginRepositories>
		<pluginRepository>
			<releases>
				<enabled>true</enabled>
				<updatePolicy>always</updatePolicy>
				<checksumPolicy>warn</checksumPolicy>
			</releases>
			<snapshots>
